        "phpmailer/phpmailer": "dev-master",
        "tijsverkoyen/css-to-inline-styles": "^2.2@dev"
    },
    "config": {
        "platform": {
            "ext-mongo": "1.6.16"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^6.2"
    }
}
